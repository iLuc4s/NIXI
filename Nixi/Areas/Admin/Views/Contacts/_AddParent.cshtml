@model Nixi.Areas.Admin.Models.AddParentViewModel


@if (Model != null)
{
    <p>Klik op de plus om een ouder toe te voegen.</p>
    <table id="datatable-fixed-header" class="table table-striped">
        <tbody>
            @foreach (var item in Model.People)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                    <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                    <td>
                        <button class="btn btn-info btn-xs btn-primary" onclick="location.href='@Url.Action("AddAssociation", "Contacts", new { subject = Model.SubjectId, add = item.Id } )'"><span class="fa fa-plus"></span></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

