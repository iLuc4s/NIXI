@model Nixi.Areas.Admin.Models.Toddler
@using Nixi.Areas.Admin.Models
@{
    ViewBag.Title = "ToddlerDetails";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

}

<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>@Html.DisplayFor(model => model.FirstName) <small>@Html.DisplayFor(model => model.LastName)</small></h3>
            </div>
            <div class="title_right">

            </div>
        </div>
        <div class="clearfix"></div>
        <!-- Content -->
        <div class="row">
            <!-- Quick shortcuts -->
            <div class="col-md-5 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Profiel informatie</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <a class="btn btn-app">
                            <i class="fa fa-camera"></i> Foto
                        </a>
                        <a class="btn btn-app">
                            <i class="fa fa-file"></i> Gegevens
                        </a>
                        <a class="btn btn-app">
                            <i class="fa fa-phone"></i> Contact
                        </a>
                        <a class="btn btn-app">
                            <i class="fa fa-edit"></i> Dossier
                        </a>
                        <a class="btn btn-app">
                            <i class="fa fa-calendar-check-o"></i> Aanwezigheid
                        </a>
                    </div>
                </div>
            </div>
            <!-- /Quick shortcuts -->
            <!-- Current attendance -->
            <div class="col-md-7 col-sm-12 col-xs-12">
                <div class="x_panel">
                    @{
                        AgreedPeriod current = Model.AgreedPeriods.Where(ap => (ap.StartDate <= DateTime.Now && ap.EndDate >= DateTime.Now)).FirstOrDefault();
                        if (current != null)
                        {
                            <div class="x_title">
                                <h2>Huidige aanwezigheid <small>Van @current.StartDate.ToShortDateString() tot @current.EndDate.ToShortDateString()</small></h2>
                                <ul class="nav navbar-right panel_toolbox">
                                    <li>
                                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                    </li>
                                </ul>
                                <div class="clearfix"></div>
                            </div>
                            <div class="x_content">
                                <!-- Days -->
                                <div style="width:100%; text-align:center;">
                                    <div class="btn-group-vertical" style="width:80px;">
                                        <button class="btn btn-default btn-sm" type="button">Maandag</button>
                                        @switch (current.Monday)
                                        {
                                            case DayType.FullDay:
                                                <button class="btn btn-primary btn-xs" type="button">AM</button>
                                                <button class="btn btn-primary btn-xs" type="button">PM</button>
                                                break;
                                            case DayType.AM:
                                                <button class="btn btn-primary btn-xs" type="button">AM</button>
                                                <button class="btn btn-default btn-xs disabled" type="button">PM</button>
                                                break;
                                            case DayType.PM:
                                                <button class="btn btn-default btn-xs disabled" type="button">AM</button>
                                                <button class="btn btn-primary btn-xs" type="button">PM</button>
                                                break;
                                            case DayType.NotComing:
                                                <button class="btn btn-default btn-xs disabled" type="button">AM</button>
                                                <button class="btn btn-default btn-xs disabled" type="button">PM</button>
                                                break;
                                        }
                                    </div>
                                    <div class="btn-group-vertical" style="width:80px;">
                                        <button class="btn btn-default btn-sm" type="button">Dinsdag</button>
                                        @switch (current.Tuesday)
                                        {
                                            case DayType.FullDay:
                                                <button class="btn btn-primary btn-xs" type="button">AM</button>
                                                <button class="btn btn-primary btn-xs" type="button">PM</button>
                                                break;
                                            case DayType.AM:
                                                <button class="btn btn-primary btn-xs" type="button">AM</button>
                                                <button class="btn btn-default btn-xs disabled" type="button">PM</button>
                                                break;
                                            case DayType.PM:
                                                <button class="btn btn-default btn-xs disabled" type="button">AM</button>
                                                <button class="btn btn-primary btn-xs" type="button">PM</button>
                                                break;
                                            case DayType.NotComing:
                                                <button class="btn btn-default btn-xs disabled" type="button">AM</button>
                                                <button class="btn btn-default btn-xs disabled" type="button">PM</button>
                                                break;
                                        }
                                    </div>
                                    <div class="btn-group-vertical" style="width:80px;">
                                        <button class="btn btn-default btn-sm" type="button">Woensdag</button>
                                        @switch (current.Wednesday)
                                        {
                                            case DayType.FullDay:
                                                <button class="btn btn-primary btn-xs" type="button">AM</button>
                                                <button class="btn btn-primary btn-xs" type="button">PM</button>
                                                break;
                                            case DayType.AM:
                                                <button class="btn btn-primary btn-xs" type="button">AM</button>
                                                <button class="btn btn-default btn-xs disabled" type="button">PM</button>
                                                break;
                                            case DayType.PM:
                                                <button class="btn btn-default btn-xs disabled" type="button">AM</button>
                                                <button class="btn btn-primary btn-xs" type="button">PM</button>
                                                break;
                                            case DayType.NotComing:
                                                <button class="btn btn-default btn-xs disabled" type="button">AM</button>
                                                <button class="btn btn-default btn-xs disabled" type="button">PM</button>
                                                break;
                                        }
                                    </div>
                                    <div class="btn-group-vertical" style="width:80px;">
                                        <button class="btn btn-default btn-sm" type="button">Donderdag</button>
                                        @switch (current.Thursday)
                                        {
                                            case DayType.FullDay:
                                                <button class="btn btn-primary btn-xs" type="button">AM</button>
                                                <button class="btn btn-primary btn-xs" type="button">PM</button>
                                                break;
                                            case DayType.AM:
                                                <button class="btn btn-primary btn-xs" type="button">AM</button>
                                                <button class="btn btn-default btn-xs disabled" type="button">PM</button>
                                                break;
                                            case DayType.PM:
                                                <button class="btn btn-default btn-xs disabled" type="button">AM</button>
                                                <button class="btn btn-primary btn-xs" type="button">PM</button>
                                                break;
                                            case DayType.NotComing:
                                                <button class="btn btn-default btn-xs disabled" type="button">AM</button>
                                                <button class="btn btn-default btn-xs disabled" type="button">PM</button>
                                                break;
                                        }
                                    </div>
                                    <div class="btn-group-vertical" style="width:80px;">
                                        <button class="btn btn-default btn-sm" type="button">Vrijdag</button>
                                        @switch (current.Friday)
                                        {
                                            case DayType.FullDay:
                                                <button class="btn btn-primary btn-xs" type="button">AM</button>
                                                <button class="btn btn-primary btn-xs" type="button">PM</button>
                                                break;
                                            case DayType.AM:
                                                <button class="btn btn-primary btn-xs" type="button">AM</button>
                                                <button class="btn btn-default btn-xs disabled" type="button">PM</button>
                                                break;
                                            case DayType.PM:
                                                <button class="btn btn-default btn-xs disabled" type="button">AM</button>
                                                <button class="btn btn-primary btn-xs" type="button">PM</button>
                                                break;
                                            case DayType.NotComing:
                                                <button class="btn btn-default btn-xs disabled" type="button">AM</button>
                                                <button class="btn btn-default btn-xs disabled" type="button">PM</button>
                                                break;
                                        }
                                    </div>
                                </div>
                                <!-- /Days -->
                            </div>
                        }

                    }
                </div>

            </div>
