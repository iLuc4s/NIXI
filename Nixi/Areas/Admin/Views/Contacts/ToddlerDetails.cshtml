                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            @Html.EnumDropDownListFor(model => model.Gender, htmlAttributes: new { @class = "form-control col-md-7 col-xs-12", @id = "gender" })
                                            @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.GuaranteePrice, htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12", @for = "guarantee" })
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            @Html.EditorFor(model => model.GuaranteePrice, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12", @id = "guarantee" } })
                                            @Html.ValidationMessageFor(model => model.GuaranteePrice, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

